{
  "name": "@fzed51/git-tool",
  "version": "0.4.0",
  "description": "A command-line tool for Git operations with AI-powered commit message generation",
  "type": "module",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "git-commit": "./dist/git-commit.js",
    "git-changelog": "./dist/git-changelog.js"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/git-commit.js dist/git-changelog.js",
    "prepublishOnly": "npm run build",
    "git-commit": "tsx src/git-commit.ts",
    "git-changelog": "tsx src/git-changelog.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "keywords": [
    "git",
    "commit",
    "cli",
    "tool",
    "command-line",
    "version-control",
    "IA",
    "AI",
    "mistral",
    "commit-message",
    "automation"
  ],
  "author": "Fabien Sanchez",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.14.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4"
  }
}