{
	"name": "git-tool",
	"version": "1.0.0",
	"description": "A command-line tool for Git operations",
	"type": "module",
	"bin": {
		"git-commit": "./dist/git-commit.js"
	},
	"scripts": {
		"build": "tsc",
		"postbuild": "chmod +x dist/git-commit.js",
		"dev": "tsc --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"keywords": [
		"git",
		"commit",
		"cli",
		"tool",
		"command-line",
		"version-control",
		"IA",
		"AI"
	],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/node": "^22.10.2",
		"tsx": "^4.21.0",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@mistralai/mistralai": "^1.14.0",
		"dotenv": "^17.2.4"
	}
}
